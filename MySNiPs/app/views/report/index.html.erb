    var id = $(this).attr('id');
    if(id=='goodBut'){$("#radioGood").prop("checked", true);}
    else if(id=='badBut'){$("#radioBad").prop("checked", true);}
});

$('label#rep2').click(function(e){
      e.preventDefault();
      $("#rb2").prop("checked", true);
      $("#rb1").prop("checked", false);
