<%= stylesheet_link_tag "bootlogin" %>
<%= form_for :login do |f| %>
<div class="text-center">
    <form class="form-signin">

    <h1>Log In</h1>
    
    <%= f.text_field :identifier, autofocus: true, :class=>'form-control', :placeholder=>'Identificador' %>
    
    <%= f.password_field :password, :class=>'form-control mb-3', :placeholder=>'Password',:style=>'width:300px;' %>
	
	<% if alert %>
      <p class="text-danger"><%= alert %></h1>
	<% end %>

    <% if current_user %>
    <%= link_to 'Log Out', logout_path, method: :delete %>
    <% end %>

    <%= f.submit 'Log In',:class=>'btn btn-lg btn-primary btn-block mt-3' %>
    
        
    </form>

</div>
<% end %>